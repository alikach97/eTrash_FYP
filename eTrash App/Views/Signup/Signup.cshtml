@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign Up</h3>
                </div>
                <div class="panel-body">
                    <form role="form" enctype="application/x-www-form-urlencoded" action="http://etrash.info/api/user/create.php" method="post" target="formDestination">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Full Name" name="name" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Username" name="username" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password">
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign up" onclick="location.href='@Url.Action("","Login")'">
                        </fieldset>
                    </form>
                    <iframe name="formDestination" style="display: none"></iframe>

                </div>
            </div>
        </div>
    </div>
</div>

