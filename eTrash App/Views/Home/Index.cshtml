<script>
    var d = new Date();
    var yest = d.getFullYear() + "-" + (d.getMonth() + 1) + "-" + (d.getDate() - 3);
    var tod = d.getFullYear() + "-" + (d.getMonth() + 1) + "-" + d.getDate();
    yest = yest.toString();
    tod = tod.toString();
    var url = "https://newsapi.org/v2/everything?q=recycling%20AND%20waste%20Environment&from=" + yest + "&to=" + tod + "&sortBy=popularity&apiKey=a941f0d56a02430fb9f81b78e61bc7b6";
    //alert(url);
    var settings = {
        "async": true,
        "url": url,
        "method": "GET"
    }

    $.ajax(settings).done(function (response) {
        //alert(JSON.stringify(response));
        var articles = response.articles;
        for (var i = 0; (i < 10) && (i < articles.length) ; i++) {
            if (i % 2 == 0) {
                $('#news').append(' <li>' +
                                    ' <div class="timeline-panel"> ' +
                                   '   <div class="timeline-heading"> ' +
                                   '    <a href = "' + articles[i].url + '"> <h4 class="timeline-title"> ' + articles[i].title + ' </h4> </a>' +
                                   '     <p> ' +
                                   '       <small class="text-muted"><i class="fa fa-clock-o"></i> ' +  findHours(articles[i].publishedAt) + ' hours ago via ' + articles[i].source.name + '</small> ' +
                                   '     </p> ' +
                                   '   </div> ' +
                                   '  <div class="timeline-body"> ' +
                                   '    <p> ' + articles[i].content.substr(0, articles[i].content.indexOf('[')) + '</p> ' +
                                   '  </div> ' +
                                   '  </div> ' +
                                   '</li>');
            }
            else {
                $('#news').append(' <li class = "timeline-inverted" >' +
                                   ' <div class="timeline-panel"> ' +
                                  '   <div class="timeline-heading"> ' +
                                  '    <a href = "' + articles[i].url + '"> <h4 class="timeline-title"> ' + articles[i].title + ' </h4> </a>' +
                                  '     <p> ' +
                                  '       <small class="text-muted"><i class="fa fa-clock-o"></i> ' +  findHours(articles[i].publishedAt) + ' hours ago via ' + articles[i].source.name + '</small> ' +
                                  '     </p> ' +
                                  '   </div> ' +
                                  '  <div class="timeline-body"> ' +
                                  '    <p> ' + articles[i].content.substr(0,articles[i].content.indexOf('[')) + '</p> ' +
                                  '  </div> ' +
                                  '  </div> ' +
                                  '</li>');
            }
        }

    });

    function findHours(time) {
        var startTime = new Date(time);
        startTime = startTime.getHours();
        // alert(startTime);
        var endTime = new Date().getHours();
        // alert(endTime);
        var duration = endTime - startTime;
        if (duration == 0)
            duration++;
        if (duration < 0)
            duration = duration * -1;
        return duration;
    }
    //alert(JSON.stringify(sessionStorage));
    var sensors = JSON.parse(localStorage.getItem("Sensor"));
    $('#bins').html(sensors.records.length.toString());
    //    $('#bins').html('4');

</script>

